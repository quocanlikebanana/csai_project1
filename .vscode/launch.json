{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Module Input",
            "type": "debugpy",
            "request": "launch",
            "module": "input.input",
            "console": "externalTerminal"
        },
        {
            "name": "Python Debugger: Module Main",
            "type": "debugpy",
            "request": "launch",
            "module": "main"
        },
        {
            "name": "Python Debugger: Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}"
        }
    ]
}